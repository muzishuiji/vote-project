/**voteItemDetail.wxss**/

.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  color: #333333;
  overflow-y: auto;
  font-size: 14px;
  padding-top: 10px;
}

.vote-image { 
  position: relative;
  width: calc(100vw - 30px);
  margin: 10px 15px;
  padding-bottom: 10px;
  border-bottom: 1px solid #eeeeee; 
}
.show-on-image {
  position: absolute;
  left: 30px;
  top: 50%;
  transform: translateY(-50%);
  line-height: 30px;
  font-size: 14px;
}
.give-call {
  width: 45px;
  height: 26px;
  line-height: 25px;
  background: -webkit-gradient(linear, 0% 0%, 100% 0%,from(#0186fa), to(#00d2ff));
  background: gradient(linear, 0% 0%, 100% 0%,from(#0186fa), to(#00d2ff));
  color: #ffffff;
  border-radius: 20px;
  font-size: 12px;
  text-align: center;
}
.vote-item-title {
  height: 30px;
  line-height: 30px;
  font-size: 18px;
  font-family: '华文楷体';
  font-weight: bold;
  color: #ffffff;
  
}
.linear-blue {
  color:#ffffff;
  
}
.linear-blue text {
  text-shadow: 0 0 10px #ffffff;
}
.mr-30 {
  margin-right: 30px;
}
.activity-tab {
  width: calc(100vw - 30px);
  margin: 10px 15px;
  border-bottom: 1px solid #eeeeee;
  text-indent: 2em;
  padding: 0 5px 20px 5px;
}
.data-list {
  width: calc(100vw - 30px);
  margin: 0 auto;
}
.list-part {
  color: #aaaaaa;
  padding: 10px;
}
.data-item {
  border-radius: 5px;
  padding: 5px 10px;
  position: relative;
}
.data-flex {
  display: flex;
 
}
.comment-content {
   margin-top: 5px;
   font-size: 14px;
}
.data-item-index {
  
  line-height: 44px;
  vertical-align: middle;
}
.data-item-left {
  flex: 0 0 30px;
  line-height: 36px;
}
.data-item-right {
  flex: 1;
  line-height: 18px;
  vertical-align: middle;
}
.data-item-img {
  width: 25px;
  height: 25px;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10px;
}
.activity-bg {
  width: calc(100vw - 30px);
  height: 160px;
}
.item-state {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 12px;

}
.warn {
  color: #0186fa;
}


.vote-top {
  padding: 0 15px;
  line-height: 30px; 
  display: flex;
  display: -webkit-flex;
}
.vote-title {
  flex: 1;
  margin-right: 40px;
}
.share-btn {
  flex: 0 0 40px;
}
.share-btn::before {
  content: '';
  border: none;
}
.share-btn::after {
  content: '';
  border: none;
}
.border {
  width: 26px;
  height: 26px;
  line-height: 23px;
  text-align: center;
  border: 1px solid #0186fa;
  border-radius: 50%;
}
.zan-icon {
  width: 20px;
  height: 20px;
}
.call-for {
  width: 120px;
  height: 28px;
  margin: 0 auto;
  line-height: 28px;
  background: #32adff;
  color: #ffffff;
  border-radius: 20px;
  text-align: center;
  margin-bottom: 20px;
}
.action-sheet {
  width: 100vw;
  height: 140px;
  background: #ffffff;
  position: fixed;
  left: 0; 
  bottom: 0;
  font-size: 14px;
  border-top: 1px solid #eeeeee;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.action-header {
  padding: 0 20px;
  height: 35px;
  line-height: 35px;
  display: flex;
  justify-content: space-between;
}
.add-mar {
  padding: 0 20px;
  display: flex;
}
.action-input {
  flex: 1;
  background: #f1f1f1;
  margin-top: 5px;
  border-radius: 5px;
  padding: 10px;
}

.btn-right {                   
  width: 100%;
  margin: 10px;
  position: relative;
}
.extra {
  
  width: 50px;
  height: 28px;
  line-height: 28px;
  background: #32adff;
  color: #ffffff;
  border-radius: 20px;
  text-align: center;
  position: absolute;
  right: 20px;
  bottom: -26px;
}
.list-title{
  color:#aaa;
  height:30px;
  line-height: 26px;
  text-align:center;
  display:-webkit-flex;
  display:flex;
  margin:0 10%;
  position:relative;
  font-size: 14px;
}
.list-title-text {
  flex: 0 0 100px;
}
.list-title-line {
  flex: 1;
  width: 100px;
  height: 1px;
  background: #ddd;
  margin-top: 13px;
}