
/**index.wxss**/

.container {
  position: relative;
  width: 100vw;
  height: auto;
  min-height: 100vh;
  overflow-y: auto;
  background: #f1f1f1;
  color: #333333;
}
.index-header {
  box-sizing: border-box;
  height: 50px;
  background: #ffffff;
  box-shadow: 0 0 3px #dddddd;
  padding-top: 10px;
}
.tab-select { 
  width: 240px;
  line-height: 28px;
  margin: 0 auto;
  display: flex;
  border: 1px solid #0186fa;
  border-radius: 20px;
}

.tab-select-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  transition: all ease 0.5s;
}
.tab-select-item:first-child {
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
  
}
.tab-select-item:last-child {
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}
.active {
  background: -webkit-gradient(linear, 0% 0%, 100% 0%,from(#0186fa), to(#00d2ff));
  color: #ffffff;
}
.index-fixed {
  width: 100vw;
  position: absolute;
  bottom: 70px;
  left: 0;
  text-align: center;
}
.index-gray {
  font-size: 12px;
  color: #dddddd;
}

.data-list {
  padding: 10px;
}
.data-item {
  background: #fff;
  box-shadow: 0px 0px 6px #ddd;
  border-radius: 10px;
  padding: 10px 15px;
  margin-bottom: 15px;
  position: relative;
}

.data-item-line {
  width: calc(100vw - 60px);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.data-item-img {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10px;
}
.data-item-body, .data-item-body1 {
  display: flex;
  justify-content: space-around;
  padding-top: 8px;
}
.data-item-body1 {
  padding-bottom: 5px;
}
.item-picture{
  flex: 0 0 60px;
  width: 60px;
  height: 60px;
} 
.suoluetu {
  width:100%;
  height:100%;
  background-size:cover;
  background-position:50%;
}
.item-title {
  flex: 1;
  font-size: 14px;
  line-height: 22px;
}
.item-title1 {
  padding-left: 8px;
}
.small-label {
  padding: 5px 10px 5px 20px;
  position: absolute;
  right: 0;
  top:0;
  border-bottom-left-radius: 30px;
  border-top-right-radius: 10px;
  background: #f1f1f1;
  font-size: 12px;
  color:#fff;
}
.online {
  background: #0186fa;
}
.warn {
  background: #f08f01;
}

.list-title{
  color:#aaa;
  height:30px;
  line-height: 26px;
  text-align:center;
  display:-webkit-flex;
  display:flex;
  margin:0 10%;
  position:relative;
  font-size: 14px;
}
.list-title-text {
  flex: 0 0 100px;
}
.list-title-line {
  flex: 1;
  width: 100px;
  height: 1px;
  background: #ddd;
  margin-top: 13px;
}
