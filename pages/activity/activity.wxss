/**activity.wxss**/

.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background: #f1f1f1;
  overflow: hidden;
  
}
.activity-tab {
  width: 220px;
  height: 32x;
  line-height: 30px;
  margin:5px auto;
  
  display: flex;
}
.activity-tab-item {
  flex: 1;
  text-align: center;
  border: 1px solid #32ADFF;
  color: #32ADFF;

}
.activity-tab-item:first-child {
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.activity-tab-item:last-child {
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
.activity-tab-item.active {
  background: #32ADFF;
  color: #fff;
}
.data-list {

  height:calc(100vh - 60px);
  overflow-y: auto;
  background: #f1f1f1;
  padding: 10px 15px;
  margin-bottom:60px;
}
.data-item {
  background: #fff;
  box-shadow: 0px 0px 6px #ddd;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 15px;
  display: flex;
  position: relative;
}
.data-item-left {
  flex: 1;
}
.data-item-right {
  flex: 4;
}
.data-item-img {
  width: 60px;
  height: 60px;
  border-radius: 3px;
  vertical-align: middle;
  margin-right: 10px;
}
.activity-bg {
  width: 100vw;
  height: 160px;
}
.item-state {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 12px;

}
.warn {
  color: #FF9800;
}

.data-item-mess {
  display: flex;
  justify-content:space-around;
}
.data-item-mess-1 {
  flex: 2;
}
.data-item-mess-2 {
  flex: 1;
}


