.page__bd {
  width: calc(100% - 30px);
  margin: 0 auto;
  height: 100vh;
  padding: 10px 15px;
  overflow-y: auto;
}
checkbox-group {
  display:flex;
}
.weui-cell-co {
  padding:10px 15px;
  position: static;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;

}
.activity-avatar {
  width: 100px;
  height: 100px;
  
}
.weui-cells {
  margin: 10px;
  
}
.weui-cell-item {
  border-radius: 5px;
  padding:10px 15px;
  position: relative;
}
.pick-cell {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 10px;
}
.img-box {
  background: #f1f1f1;
  border-radius: 5px;
  padding: 10px;
}
.pick-textarea, .pick-input {
  background: #ffffff;
  margin: 10px 0;
  padding: 8px 15px;
  border-radius: 5px;
  box-shadow: 0px 0px 5px #eee;
}
.pick-btn  {
  background: #ffffff !important;
  border-radius: 5px;
  height: 2.6rem;
  line-height: 2.6rem;
  font-size: 14px;
  margin: 10px 0;
  position: relative;
  text-align: center;
}
.pick-text {
  margin: 10px 0;
  background: #ffffff;
  border-radius: 5px;
  box-shadow: 0px 0px 5px #eee;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10px 15px;
}
.pick-gray {
  color: #aaaaaa;
  font-size: 14px;
  flex: 2;
}
.small-part {
  flex: 1;
}
.pick-submit {
  background:#f5cd19;
  color: #333333;
  border-radius: 18px;
  margin: 20px;
  height: 36px;
  line-height: 35px;
  text-align: center;
}

.input-item {
  position:relative;
}
.pick-delete {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: #ff5500;
  position: absolute;
  right: 20px;
  top: 7px;
  color: #ffffff;
  z-index: 11;
  text-align: center;
}
.pick-delete-text {
  font-size: 52px;
  line-height:16px;
  font-weight:100;
  
}

.pick-add {
  width: 20px;
  height: 20px;
  border: 2px solid #333333;
  border-radius: 50%;
  position: absolute;
  top: 7px;
  left: calc(50% - 60px);
  color: #333333;
  z-index: 11;
  text-align: center;
}
.pick-add-text {
  font-size:25px;
  position:absolute;
  top:-12px;
  left: 1px;
}



/* 修改ui框架的默认样式*/

i-radio {
  display: inline-block;
}


i-cell, .radio-index--i-radio-cell, .i-cell {
  background: #f1f1f1 !important;
}
.activity-upload {
  width: 45px;
  height: 45px;
  
}

